  "license": "MIT",
  "dependencies": {
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.2",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "mongoose": "^5.9.12",
    "paths": "^0.1.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.0.2",
    "@types/express": "^4.17.6",
    "@types/faker": "^4.1.11",
    "@types/mongoose": "^5.7.15",
    "@types/node": "^13.13.0",
    "@types/winston": "^2.4.4",
    "prettier": "^2.0.4",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.1.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "lint": "tslint --project tsconfig.json",
    "serve": "node dist/index.js",
    "prettier:base": " prettier --parser typescript",
    "prettier:check": "yarn prettier:base --list-different",
    "prettier:write": "yarn prettier:base --write \"src/**/*.{ts,tsx}\"",
    "watch:serve": "ts-node-dev --watch --poll --respawn --transpileOnly ./src/index.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier:write"
    }
  }
